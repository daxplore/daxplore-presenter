<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">

	<!-- Default page to serve -->
	
	<welcome-file-list>
		<welcome-file>presentation.jsp</welcome-file>
	</welcome-file-list>


	<!-- Public servlets -->
	
	<servlet>
		<servlet-name>getStats</servlet-name>
		<servlet-class>org.daxplore.presenter.server.GetStatsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getStats</servlet-name>
		<url-pattern>/getStats</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>getCsv</servlet-name>
		<servlet-class>org.daxplore.presenter.server.GetCsvServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getCsv</servlet-name>
		<url-pattern>/getCsv/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getPixel</servlet-name>
		<servlet-class>org.daxplore.presenter.server.png.GetPixelServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>getPixel</servlet-name>
		<url-pattern>/pixel/*</url-pattern>
	</servlet-mapping>
	
	
	<!-- Admin servlets -->
	
	<servlet>
		<servlet-name>upload</servlet-name>
		<servlet-class>org.daxplore.presenter.server.upload.DataUploadServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>upload</servlet-name>
		<url-pattern>/admin/upload</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>uploadUnpack</servlet-name>
		<servlet-class>org.daxplore.presenter.server.upload.DataUnpackServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>uploadUnpack</servlet-name>
		<url-pattern>/admin/uploadUnpack</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>
	
	
	<!-- Google Remote API -->
	
	<servlet>
		<servlet-name>remoteapi</servlet-name>
		<servlet-class>com.google.apphosting.utils.remoteapi.RemoteApiServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>remoteapi</servlet-name>
		<url-pattern>/remote_api</url-pattern>
	</servlet-mapping>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>remoteapi</web-resource-name>
			<url-pattern>/remote_api</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>admin</role-name>
		</auth-constraint>
	</security-constraint>

</web-app>
