<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
		.scrollpanel {
			width: 100%;
			height: 100%;
		}
		.wrapper {
			width: 100%;
			padding: 15px;
		}
		.header-top {
			font-size: large;
			font-weight: bold;
			margin-bottom: -5px;
		}
		.header-bottom {
			font-size: xx-large;
			margin-left: 20px;
		}
		.header {
			font-size: large;
			font-weight: bold;
			border-top: solid 1px lightgray;
			padding-top: 10px;
			margin-top: 25px;
			width: 100%;
		}
		.header-subtext {
			margin-bottom: 5px;
		}
		.formpanel {
			margin-bottom: 0; /* Override form panel default margin */
		}
		.bubble {
			padding: 8px;
			border: solid 5px hsl(210, 5%, 90%);
			background-color: hsl(210, 5%, 90%);
			border-radius: 5px;
			margin-left: 20px;
			margin-top: 10px;
			width: 70%;
		}
		.bubble-button {
			float: right;
		}
		.maxwidth {
			width: 100%;
		}
		.messagearea {
			width: 95%;
			height: 150px;
			margin-top: 10px;
		}
		.inline {
			display: inline;
		}
		.inlinelabel-header {
			display: inline;
			font-weight: bold;
		}
	</ui:style>
	
	<g:ScrollPanel styleName="{style.scrollpanel}">
		<g:VerticalPanel addStyleNames="{style.wrapper}">
			<g:Label styleName="{style.header-top}">Prefix:&nbsp;&nbsp;</g:Label>
			<g:Anchor ui:field='prefixHeader' styleName="{style.header-bottom}"></g:Anchor>
			<g:Label styleName="{style.header}">Prefix status</g:Label>
			<g:Label styleName="{style.header-subtext}">Information and statistics.</g:Label>
			<g:FlowPanel>
				<g:Label styleName="{style.inlinelabel-header}">Main presenter:&nbsp;</g:Label>
				<g:Anchor ui:field='mainlink'></g:Anchor>
			</g:FlowPanel>
			<g:FlowPanel>
				<g:Label styleName="{style.inlinelabel-header}">StatDataItem count:&nbsp;</g:Label>
				<g:Label ui:field='something' styleName="{style.inline}"></g:Label>
			</g:FlowPanel>
			
			<g:FormPanel ui:field='settingsForm' styleName="{style.formpanel}">
				<g:VerticalPanel styleName="{style.maxwidth}">
					<g:Label styleName="{style.header}">Settings</g:Label>
					<g:VerticalPanel styleName="{style.bubble}">
						<g:Hidden name='action' value='put'/>
						<g:Hidden ui:field='settingsPrefix' name='prefix'/>
						<g:Label>Google Analytics Code (optional)</g:Label>
						<g:TextBox ui:field='gaIDField' name='gaID'/>
						<g:Button ui:field="settingsButton" styleName="{style.bubble-button}">Update settings</g:Button>
					</g:VerticalPanel>
				</g:VerticalPanel>
			</g:FormPanel>
			
			<g:FormPanel ui:field='uploadForm' styleName="{style.formpanel}">
				<g:VerticalPanel styleName="{style.maxwidth}">
					<g:Label styleName="{style.header}">Upload a new Daxplore file</g:Label>
					<g:Label styleName="{style.header-subtext}">Upload a file created with Daxplore Producer. This will completely replace all the current content on this prefix.</g:Label>
					<g:VerticalPanel styleName="{style.bubble}">
						<g:FileUpload ui:field='uploadWidget' name='dataUpload'/>
						<g:Hidden ui:field='uploadPrefix' name='prefix' ></g:Hidden>
						<g:Button ui:field='uploadButton' styleName="{style.bubble-button}">Upload</g:Button>
					</g:VerticalPanel>
				</g:VerticalPanel>		
			</g:FormPanel>
			
			<g:VerticalPanel styleName="{style.maxwidth}">
				<g:Label styleName="{style.header}">Delete prefix</g:Label>
				<g:Label styleName="{style.header-subtext}">Delete the prefix and all data, texts and information that belongs to it.</g:Label>
				<g:VerticalPanel styleName="{style.bubble}">
					<g:Label ui:field='deletePrefixLabel' styleName='{style.inlinelabel-header}'>Delete prefix ?:</g:Label>
					<g:Button ui:field='deleteButton' styleName="{style.bubble-button}">Delete ?</g:Button>
				</g:VerticalPanel>
			</g:VerticalPanel>
		</g:VerticalPanel>
	</g:ScrollPanel>
</ui:UiBinder> 
