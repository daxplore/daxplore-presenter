<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:w="urn:import:com.google.gwt.user.cellview.client">
	
	<ui:style>
		.wrapper {
			margin: 0 auto;
			padding-top: 5px;
		}
		.header {
			font-size: large;
			font-weight: bold;
		}
		.header-presentation {
			font-size: large;
			font-weight: bold;
			margin-top: 30px;
		}
		.list {
			padding: 5px;
			border: solid 1px darkgray;
			border-radius: 3px;
			margin-top: 10px;
			margin-bottom: 10px;
		}
		.list>div>div {
			padding: 5px;
		}
		.button {
			margin-top: 10px;
			width: 100%;
		}
	</ui:style>
	<g:VerticalPanel styleName="{style.wrapper}">
		<g:Label styleName="{style.header}">Select a prefix</g:Label>
		<w:CellList styleName="{style.list}" ui:field='prefixCellList'/>
		<g:Button ui:field='addPrefixButton' styleName="{style.button}">Add a new prefix</g:Button>
		<g:Label styleName="{style.header-presentation}">Presentation&nbsp;templates</g:Label>
		<g:Button ui:field='rebuildPresentationsButton' styleName="{style.button}">Rebuild all</g:Button>
	</g:VerticalPanel>
</ui:UiBinder> 
