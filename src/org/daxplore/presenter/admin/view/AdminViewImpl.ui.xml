<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:org.daxplore.presenter.admin.view">

	<ui:style>
		.layout {
			width: 90%;
			height: 90%;
			margin: 10px auto;
			margin-top: 20px;
			padding: 10px;
			
			border-radius: 10px;
			border-width: 10px;
			border-color: white;
			background-color: white;
		}
		
		.header {
			font-family: sans-serif;
			font-size: xx-large;
			font-weight: bold;
			text-align: center;
			padding: 5px;
			padding-top: 17px;
			border-bottom: solid 1px darkgray;
			margin: 0 20px;
		}
		
		.footer {
			border-top: solid 1px darkgray;
			padding: 10px;
			padding-left: 20px;
			margin: 0 20px;
		}
		
		.sidebar {
			border-right: solid 1px darkgray;
			margin: 10px 0;
		}
		
		.main {

		}
	</ui:style>
    
	<g:DockLayoutPanel styleName="{style.layout}" unit='PX'>
		<g:north size='70'>
			<g:Label styleName="{style.header}">Administration panel for Daxplore Presenter</g:Label>
		</g:north>
		<g:south size='40'>
			<g:Label styleName="{style.footer}">Daxplore Presenter is free software. Developed by Axel Winkler and Daniel Dun√©r at Stockholm University.</g:Label>
		</g:south>
		<g:west size='250'>
			<g:SimplePanel styleName="{style.sidebar}" ui:field='sidebarContentSlot'/>
		</g:west>
		<g:center>
			<g:SimplePanel styleName="{style.main}" ui:field='mainContentSlot' />
		</g:center>
		
	</g:DockLayoutPanel> 
</ui:UiBinder> 
