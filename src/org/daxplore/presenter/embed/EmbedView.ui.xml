<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:chart="urn:import:org.daxplore.presenter.chart.display">

	<ui:style type='org.daxplore.presenter.embed.EmbedView.EmbedStyle'>
		.chartArea { border: 1px solid #BBB; }
		.transparent { background: none transparent !important; }
		.opaque { background-color: white !important; }

		.sidebarArea {
			margin-top: -15px;
		}
	</ui:style>

	<g:HorizontalPanel ui:field="main">
		<g:VerticalPanel ui:field="chartArea" styleName='{style.chartArea}'>
			<chart:ExternalHeader ui:field="header" />
			<g:SimplePanel ui:field="chartContainerPanel"/>
		</g:VerticalPanel>

		<g:VerticalPanel styleName='{style.sidebarArea}' ui:field="sidebarArea">
			<g:SimplePanel ui:field='legendPanel'/>
		</g:VerticalPanel>
	</g:HorizontalPanel>

</ui:UiBinder>
