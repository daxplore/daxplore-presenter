<ui:UiBinder
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:chart='urn:import:org.daxplore.presenter.chart'
	xmlns:display='urn:import:org.daxplore.presenter.chart.display'
	xmlns:client='urn:import:org.daxplore.presenter.client.ui'>

	<ui:style>
   		.sidebarArea {
			margin-top: -15px;
			min-width: 220px;
		}
		.bottomHorizontal {
			width: 100%;
		}
		.perspective {
			float:left;
		}
		.description {
			float:right;
		}
	</ui:style>

	<g:HorizontalPanel>
		
		<client:QuestionPanel ui:field='questionPanel'/>
		
		<g:VerticalPanel>
			<chart:ChartPanelView ui:field='chartPanel'/>
			<g:HorizontalPanel styleName="{style.bottomHorizontal}">
			    <client:PerspectivePanel ui:field='perspectivePanel' styleName="{style.perspective}"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
				
		<g:VerticalPanel styleName='{style.sidebarArea}' ui:field="sidebarArea">
			<display:QueryActiveAnimation ui:field='queryActiveAnimation'/>
			<g:SimplePanel ui:field='legendPanel'/>
			<client:DescriptionPanel ui:field='descriptionPanel' styleName="{style.description"/>
		</g:VerticalPanel>
	</g:HorizontalPanel>
</ui:UiBinder>
