<ui:UiBinder
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:chart='urn:import:org.daxplore.presenter.chart'
	xmlns:display='urn:import:org.daxplore.presenter.chart.display'
	xmlns:client='urn:import:org.daxplore.presenter.client.ui'>

	<ui:style>
   		.sidebarArea {
			margin-left: 10px;	
			margin-top: -15px;
		}
	</ui:style>

	<g:HorizontalPanel>
		
		<client:QuestionPanel ui:field='questionPanel'/>
		
		<g:VerticalPanel>
			<chart:ChartPanelView ui:field='chartPanel'/>
			<client:PerspectivePanel ui:field='perspectivePanel'/>
		</g:VerticalPanel>
				
		<g:VerticalPanel styleName='{style.sidebarArea}' ui:field="sidebarArea">
			<display:QueryActiveAnimation ui:field='queryActiveAnimation'/>
			<g:SimplePanel ui:field='legendPanel'/>
		</g:VerticalPanel>
		
	</g:HorizontalPanel>
</ui:UiBinder>
