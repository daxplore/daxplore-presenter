<ui:UiBinder
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:chart='urn:import:org.daxplore.presenter.chart'
	xmlns:display='urn:import:org.daxplore.presenter.chart.display'
	xmlns:client='urn:import:org.daxplore.presenter.client.ui'>

	<ui:style>
   	.sidebarArea {
		}
		.bottomHorizontal {
			margin-top: 10px;
			width: 100%;
		}
		.perspective {
		}
		.description {
		}
	</ui:style>

	<g:HorizontalPanel>
		
		<g:SimplePanel ui:field='questionPanel' stylePrimaryName='daxplore-QuestionPanel'/>
		
		<g:VerticalPanel>
			<chart:ChartPanelView ui:field='chartPanel'/>
			<g:HorizontalPanel ui:field='bottomPanel' styleName="{style.bottomHorizontal}">
				<g:SimplePanel stylePrimaryName='daxplore-PerspectivePanel'/>
				<client:DescriptionPanelBottom ui:field='descriptionPanelBottom' styleName="{style.description}"/>
			</g:HorizontalPanel>
		</g:VerticalPanel>
				
		<g:VerticalPanel styleName='{style.sidebarArea}' ui:field="sidebarArea">
			<g:SimplePanel ui:field='legendPanel'/>
			<client:DescriptionPanelLegend ui:field='descriptionPanelLegend' styleName="{style.description}"/>
		</g:VerticalPanel>
		
	</g:HorizontalPanel>
</ui:UiBinder>
