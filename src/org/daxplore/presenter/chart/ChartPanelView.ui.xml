<ui:UiBinder
	xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:chart='urn:import:org.daxplore.presenter.chart'>
	
	<ui:style>
		.chartArea {
			border: 1px solid #D4D4D4;
			margin-top: 5px;
		}
		
		.sidebarArea {
			margin-left: 10px;	
			margin-top: -15px;
		}
	</ui:style>
		
	<g:HorizontalPanel>
	
		<g:VerticalPanel styleName='{style.chartArea}'>
			<g:SimplePanel ui:field='headerPanel' />
			<g:SimplePanel ui:field='chartContainerPanel' />
		</g:VerticalPanel>
		
		<g:VerticalPanel styleName='{style.sidebarArea}' ui:field="sidebarArea">
			<chart:QueryActiveAnimation ui:field='queryActiveAnimation'/>
			<g:SimplePanel ui:field='legendPanel'/>
		</g:VerticalPanel>
		
	</g:HorizontalPanel>
</ui:UiBinder>